conky.config = {
-- conky config for i3bar
	out_to_x = false,
	own_window = false,
	out_to_console = true,
	background = false,
	max_text_width = 0,
	update_interval = 1.0,
	total_run_times = 0,
	short_units = false,
	if_up_strictness = 'address',
	use_spacer = 'left',
	override_utf8_locale = false,
	cpu_avg_samples = 1,
	text_buffer_size = 1024,

};

conky.text = [[
[ \
 ${if_running mpd}${if_mpd_playing}{ \
  "full_text": "♪ ${scroll 20 20 $mpd_smart}", \
  "color": "\#e3e0d7" \
 }, \
 $endif$endif{ \
  "full_text": "↑ $uptime_short", \
  "color": "\#e5786d" \
 }, \
 { \
  "full_text": "/ ${fs_free /}", \
  "color": ${if_match ${fs_free_perc /}<0.5}"\#ff2222"$else"\#50fc50"$endif \
 }, \
 ${if_match "$battery_short"!="U"}{ \
  "full_text": " ${battery_short} ${battery_time}", \
  "color": ${if_match ${battery_percent}>10}"\#ffad33"$else"\#ff3333"$endif \
 }, \
 $endif${if_up wlp1s0}{ \
  "full_text": "${wireless_essid wlp1s0} ▲ ${upspeed wlp1s0} ▼ ${downspeed wlp1s0}", \
  "color": "\#f8fc50" \
 }, \
 $endif${if_up wlp3s0}{ \
  "full_text": "${wireless_essid wlp3s0} ▲ ${upspeed wlp3s0} ▼ ${downspeed wlp3s0}", \
  "color": "\#f8fc50" \
 }, \
 $endif${if_up wlan0}{ \
 "full_text": "${wireless_essid wlan0} ▲ ${upspeed wlan0} ▼ ${downspeed wlan0}", \
  "color": "\#f8fc50" \
 }, \
 $endif{ \
  "full_text": " ${mem}", \
  "color": ${if_match ${memperc}<90}"\#77a7e5"$else"\#ff1111"$endif \
 }, \
 { \
  "full_text": " ${loadavg 1}", \
  "color": ${if_match ${loadavg 1}<2}"\#f854f8"$else"\#ff4444"$endif \
 }, \
 { \
  "full_text": "${acpitemp}°", \
  "color": "\#e5786d" \
 }, \
 { \
  "full_text": "I/O ${diskio /dev/sda}" , \
  "color": "\#ffffff" \
 }, \
 { \
  "full_text": "${time}", \
  "color": "\#50fcf8" \
 } \
],
]];
